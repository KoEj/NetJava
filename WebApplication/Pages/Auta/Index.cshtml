@page
@model WebApplication.Pages.Auta.IndexModel

@{
    ViewData["Title"] = "TABLICA ZARZADAZNIA POJAZDAMI";
}

<h1>TABLICA ZARZADZANIA POJAZDAMI</h1>

<p>
    <a asp-page="Create">DODAJ NOWY POJAZD</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].MODEL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].PRODUCENT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auto[0].NUMER_REJESTRACYJNY)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Auto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MODEL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCENT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NUMER_REJESTRACYJNY)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
